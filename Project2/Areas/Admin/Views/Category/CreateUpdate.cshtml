@model DataAccessLayer.ViewModels.CategoryVM
<from method="post" asp-action="CreateUpdate">
	<input type="hidden" asp-for="Category.ProductId"/>

	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">@((Model.Category==null || Model.Category.ProductId==0)?"Create":"Update") Category</h2>
			<hr/>
		</div>
		<div asp-validation-summary=All></div>

		<div class="row mb-3">
			<label asp-for="Category.ProductName"></label>
			<input asp-for="Category.ProductName" class="form-control" />
			<span asp-validation-for="Category.ProductName" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Category.DisplayOrder"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		@if(Model.Category==null || Model.Category.ProductId==0)
		{
			<button class="btn btn-primary" type="submit">Create</button>
		}
		else
		{
			<button class="btn btn-primary" type="submit">Update</button>
		}
	</div>
	<a asp-action="Index" asp-controller="category">Back to List</a>
</from>
@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}